<Window x:Class="Hack.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hack"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="39" Margin="70,162,0,0" TextWrapping="Wrap" FontSize="15" FontWeight="Bold" Text="username:" VerticalAlignment="Top" Width="143"/>
        <TextBox x:Name="userNameBox" HorizontalAlignment="Left" Height="56" Margin="239,145,0,0" TextWrapping="Wrap" FontWeight="DemiBold" FontSize="20" Text="" VerticalAlignment="Top" Width="264"/>
        <TextBlock HorizontalAlignment="Left"  FontSize="15" FontWeight="Bold" Height="42" Margin="42,275,0,0" TextWrapping="Wrap" Text="password:" VerticalAlignment="Top" Width="171"/>
        <PasswordBox x:Name="passwordBox" FontWeight="DemiBold" FontSize="15"  HorizontalAlignment="Left" Height="61" Margin="239,256,0,0" VerticalAlignment="Top" Width="303" RenderTransformOrigin="0.5,0.033"/>
        <Button Content="login" Click="loginClick" FontWeight="Bold" FontSize="20" HorizontalAlignment="Left" Height="42" Margin="522,347,0,0" VerticalAlignment="Top" Width="155"/>

    </Grid>
</Window>
