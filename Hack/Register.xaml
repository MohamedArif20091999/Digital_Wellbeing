<Window x:Class="Hack.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hack"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        
        Title="Register" MaxHeight="500" MaxWidth="850" Background="{DynamicResource windowbackground}" Width="889.5">


    <Window.Resources>
        <LinearGradientBrush x:Key="windowbackground">
            <GradientStop Offset="0.1" Color="#70f3a9" />
            <GradientStop Offset="0.6" Color="#a2ebe8"/>
        </LinearGradientBrush>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Background.jpg" Stretch="Uniform" Opacity="0.05"/>
        </Grid.Background>



        <Label x:Name="notMatching" Content="" FontSize="15" FontWeight="DemiBold" Foreground="Red" HorizontalAlignment="Left" Height="54" Margin="542,3,0,0" VerticalAlignment="Top" Width="246" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-1.001"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Grid Background="White" x:Name="register" HorizontalAlignment="Left" Height="474" Margin="347,0,-50,0" VerticalAlignment="Top" Width="585">
            <TextBlock HorizontalAlignment="Left" Height="40" Margin="43,30,0,0" FontSize="30" FontWeight="Bold" TextWrapping="Wrap" Text="New here!" VerticalAlignment="Top" Width="172" RenderTransformOrigin="0.376,0.639"/>
            <TextBlock HorizontalAlignment="Left" FontSize="15" FontWeight="DemiBold"  Height="34" Margin="10,158,0,0" TextWrapping="Wrap" Text="   Username:" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.65,0.543"/>
            <Label  x:Name="userNameBox" Content="" HorizontalAlignment="Left" Height="37" Margin="169,151,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="DemiBold" Width="243"/>
            <TextBlock HorizontalAlignment="Left" FontSize="15" FontWeight="DemiBold" Height="35" Margin="8,202,0,0" TextWrapping="Wrap" Text="   Create password:" VerticalAlignment="Top" Width="137"/>
            <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Height="37" Margin="167,196,0,0" VerticalAlignment="Top" Width="250"/>
            <TextBlock FontSize="15" FontWeight="DemiBold" HorizontalAlignment="Left" Height="37" Margin="20,253,0,0" TextWrapping="Wrap" Text="Confirm password:" VerticalAlignment="Top" Width="142"/>
            <PasswordBox x:Name="cpasswordBox" HorizontalAlignment="Left" Height="37" Margin="168,246,0,0" VerticalAlignment="Top" Width="250"/>
            <Button x:Name="submitButton" Content="Register" BorderBrush="#70f3a9"  BorderThickness="1" FontSize="20" FontWeight="DemiBold" Click="submitBtn" HorizontalAlignment="Left" Height="38" Margin="301,314,0,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="0.599,0.403"/>
            <TextBlock HorizontalAlignment="Left" Height="34" Margin="44,76,0,0" TextWrapping="Wrap" FontSize="20" FontWeight="DemiBold" Text="Register for an account" VerticalAlignment="Top" Width="252"/>
            <Label Foreground="red"  x:Name="notMatching1" Content="" FontSize="15" FontWeight="DemiBold" HorizontalAlignment="Left" Height="57" Margin="20,301,0,0" VerticalAlignment="Top" Width="276"/>




        </Grid>
        <TextBlock HorizontalAlignment="Left" Margin="24,120,0,0" TextWrapping="Wrap" FontWeight="Bold" FontSize="30" Text="Welcome back!" VerticalAlignment="Top" Height="46" Width="264"/>
        <TextBlock  HorizontalAlignment="Left" FontWeight="DemiBold" Height="27" Margin="24,192,0,0" TextWrapping="Wrap" Text="Username:" FontSize="15"  VerticalAlignment="Top" Width="88"/>
        <Label x:Name="loginUsername" FontSize="18" FontWeight="DemiBold" Content="" HorizontalAlignment="Left" Height="33" Margin="117,186,0,0" VerticalAlignment="Top" Width="202"/>
        <PasswordBox x:Name="loginPasswordbox" HorizontalAlignment="Left" Height="34" Margin="117,232,0,0" VerticalAlignment="Top" Width="202"/>
        <TextBlock FontWeight="DemiBold" HorizontalAlignment="Left" Height="27" Margin="15,235,0,0" TextWrapping="Wrap" Text="  Password:" FontSize="15" VerticalAlignment="Top" Width="97"/>
        <Button Content="Login" Click="loginClick" HorizontalAlignment="Left" Height="31" BorderBrush="#70f3a9"  BorderThickness="1" FontSize="17" FontWeight="DemiBold" Margin="235,302,0,0" VerticalAlignment="Top" Width="86"/>

    </Grid>
</Window>
